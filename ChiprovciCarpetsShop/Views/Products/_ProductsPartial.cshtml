@model IEnumerable<ProductServiceModel>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card mb-5">
                <img class="card-img-top" src="@product.ImageUrl"  alt=@product.ProductTypeName>
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@product.ProductTypeName @product.Model</h5>
                    <h5 class="card-title text-center">@product.Price лв</h5>
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" asp-route-information="@product.GetInformation()" class="btn btn-primary">Details</a>
                    @if (ViewBag.AllowEditing == true || User.IsAdmin())
                    {
                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                        <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>
